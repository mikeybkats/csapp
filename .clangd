CompileFlags:
  Add: [-Wall, -Werror, -Wsign-compare]

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: [
        bugprone-*,
        cert-*,
        cppcoreguidelines-*,
        performance-*,
        portability-*,
        # readability-*,
      ]
    Remove: [cppcoreguidelines-avoid-magic-numbers]

Index:
  Background: Build

Completion:
  AllScopes: true

InlayHints:
  Enabled: Yes
